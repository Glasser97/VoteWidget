    <declare-styleable name="VoteButton">
        <attr name="leftString" format="string" />
        <attr name="rightString" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="prePercentTextSize" format="dimension"/>
        <attr name="isPreProcess" format="boolean"/>
        <attr name="textColor" />
        <attr name="slashUnderWidth"/>
        <attr name="slashWidth"/>
        <attr name="leftColor"/>
        <attr name="rightColor"/>
    </declare-styleable>

    <declare-styleable name="VoteWidget">
        <attr name="buttonSlashWidth" format="dimension"/>
        <attr name="barSlashWidth" format="dimension"/>
        <attr name="buttonSlashUnderWidth" format="dimension"/>
        <attr name="barSlashUnderWidth" format="dimension"/>
        <attr name="leftColor"/>
